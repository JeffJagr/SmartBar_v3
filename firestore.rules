rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function companyDoc(companyId) {
      return get(/databases/$(database)/documents/companies/$(companyId));
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function userRole(uid) {
      return userDoc(uid).data.role;
    }

    function hasRole(roles) {
      return isSignedIn() && userDoc(request.auth.uid).exists
        && userRole(request.auth.uid) in roles;
    }

    function isOwner(companyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/companies/$(companyId))
        && request.auth.uid in companyDoc(companyId).data.ownerIds;
    }

    function isStaffSession(companyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/companies/$(companyId)/staffSessions/$(request.auth.uid))
        && get(/databases/$(database)/documents/companies/$(companyId)/staffSessions/$(request.auth.uid)).data.companyId == companyId;
    }

    function isStaff(companyId) {
      return isSignedIn()
        && (exists(/databases/$(database)/documents/companies/$(companyId)/staff/$(request.auth.uid))
            || isStaffSession(companyId));
    }

    function canAccess(companyId) {
      return isOwner(companyId) || isStaff(companyId) || hasRole(['owner', 'manager', 'staff']);
    }

    match /companies/{companyId} {
      // Owners and staff can read company meta; only owners can update/delete.
      allow read: if isOwner(companyId) || isStaff(companyId);
      // Allow any authenticated user to create a company; the app writes ownerIds containing the creator.
      allow create: if isSignedIn();
      allow update, delete: if isOwner(companyId);

      match /products/{productId} {
        allow read: if canAccess(companyId);
        // Allow owners/staff to write inventory fields; tighten fields as needed.
        allow create, update, delete: if canAccess(companyId);
      }

      match /notes/{noteId} {
        allow read: if canAccess(companyId);
        allow create: if canAccess(companyId);
        allow update, delete: if canAccess(companyId);
      }

      match /staff/{staffId} {
        allow read: if isOwner(companyId) || (isStaff(companyId) && staffId == request.auth.uid);
        allow create, update, delete: if isOwner(companyId);
      }

      // Staff session docs created after PIN login mapped to auth.uid.
      match /staffSessions/{sessionId} {
        allow create, update: if isSignedIn()
          && request.auth.uid == sessionId
          && request.resource.data.companyId == companyId;
        allow read: if isOwner(companyId) || (isStaffSession(companyId) && request.auth.uid == sessionId);
        // No delete needed; can be cleaned by owner.
      }

      // Optional per-company users subcollection (if used).
      match /users/{userId} {
        allow read: if isOwner(companyId) || userId == request.auth.uid;
        allow create, update, delete: if isOwner(companyId) || hasRole(['owner', 'manager']);
      }
    }

    // Global users collection for roles/permissions lookup.
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Central staffPins lookup (PIN->company) used during staff login; requires any signed-in session (including anonymous).
    match /staffPins/{pinId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
